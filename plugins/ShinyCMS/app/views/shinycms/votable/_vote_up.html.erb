<%= t( 'shinycms.upvotes.vote' ) %>:

<% if current_user&.voted_up_on?( resource ) %>
  <%= button_to t( 'shinycms.upvotes.remove_upvote' ),
              destroy_vote_path( resource.class.name.underscore, resource.id ), class: 'link-button', method: :delete %>
<% else %>
  <%= button_to t( 'shinycms.upvotes.add_upvote' ),
              create_vote_path( resource.class.name.underscore, resource.id, 'up' ), class: 'link-button' %>
<% end %>

(<%= resource.get_upvotes.size %>)
