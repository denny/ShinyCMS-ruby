<% return unless current_user.can?( :list, :settings      ) ||
                 current_user.can?( :list, :feature_flags ) %>

  <%= render_admin_menu_section( t( 'shinycms.admin.site_settings.menu' ), 'settings' ) do %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :settings ),
        t( 'shinycms.admin.site_settings.index.title' ), shinycms.admin_site_settings_path, 'settings' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :feature_flags ),
        t( 'shinycms.admin.feature_flags.menu' ), shinycms.feature_flags_path, 'toggle-off' ) %>

  <% end %>
