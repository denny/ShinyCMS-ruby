<% return unless current_user.can?( :list, :email_recipients ) || current_user.can?( :list, :mailer_previews ) %>

  <%= render_admin_menu_section( t( 'shinycms.admin.email.menu' ), 'envelope-open' ) do %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :email_recipients ),
        t( 'shinycms.admin.email_recipients.menu' ), shinycms.email_recipients_path, 'envelope-closed' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :mailer_previews ),
        t( 'rails_email_preview.menu' ), main_app.rails_email_preview_path, 'envelope-letter' ) %>

  <% end %>
