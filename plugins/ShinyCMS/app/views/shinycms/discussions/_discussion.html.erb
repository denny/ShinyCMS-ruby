<%
  return unless feature_enabled? :comments
  return if discussion.blank?
  return if discussion.hidden?
%>

<h3 class="centered-above-section">
  <%= t( 'shinycms.discussions.comments' ) %>
</h3>

<% if resource.discussion.comments.top_level.present? %>
  <%= render partial: 'discussions/top_level',
             locals: { discussion: discussion, comments: discussion.comments.with_authors.with_comments.top_level } %>
<% else %>
  <section>
    <p>
      <%= t( 'shinycms.empty_list', items: 'comments' ) %>
    </p>
  </section>
<% end %>
