<% @page_title = t( '.title' ) %>

<%= form_for @insert_set, url: shiny_inserts.inserts_path, method: :put do |f| %>
<table class="table table-responsive-sm table-striped">
  <%= f.fields_for :elements do |fields| %>
    <%= render partial: 'element', locals: {
      fields: fields,
      content: :content,
      name: fields.object.name,
      element_type: fields.object.element_type
    } %>
  <% end %>
</table>
<p class="top-margin">
  <%= f.submit t( 'update' ) %>
</p>
<% end %>

<%= form_for :insert_element, name: 'new_element', url: shiny_inserts.create_insert_path, method: :post do |f2| %>
  <fieldset>
    <legend>
      Add new insert
    </legend>
    <p>
      <%= f2.text_field :name, placeholder: t( '.name_placeholder' ), class: 'textshort' %>
      <%= f2.select :element_type, element_types %>
      <br><%= f2.text_field :content, placeholder: t( '.content_placeholder' ), class: 'textlong' %>
    </p>
    <p>
      <%= f2.submit t( 'add' ) %>
    </p>
  </fieldset>
<% end %>
