<% @page_title = t( '.title' ) %>

<%= form_for @list, url: shiny_lists.list_path( @list ), method: :put do |f| %>
  <p>
    <%= f.label :internal_name %>
    <br><%= f.text_field :internal_name %>
  </p>
  <p>
    <%= f.label :public_name %>
    <br><%= f.text_field :public_name %>
  </p>
  <p>
    <%= f.label :slug %>
    <br><%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :description %>
    <br><%= f.text_area :description %>
  </p>

  <p class="top-margin">
    <%= submit_tag t( 'update' ) %>
  </p>
<% end %>
