<% if current_user.can?( :list, :newsletter_editions ) || current_user.can?( :list, :newsletter_templates ) %>

  <%= render_admin_menu_section( t( 'shiny_newsletters.admin.newsletters.menu' ), 'newspaper' ) do %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :newsletter_editions ),
        t( 'shiny_newsletters.admin.editions.index.title' ), shiny_newsletters.editions_path, 'newspaper' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :newsletter_editions ),
        t( 'shiny_newsletters.admin.editions.new.title' ), shiny_newsletters.new_edition_path, 'pencil' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :newsletter_sends ),
        t( 'shiny_newsletters.admin.sends.index.title' ), shiny_newsletters.sends_path, 'envelope-open' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :newsletter_sends ),
        t( 'shiny_newsletters.admin.sends.sent.title' ), shiny_newsletters.sent_path, 'envelope-closed' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :newsletter_sends ),
        t( 'shiny_newsletters.admin.sends.new.title' ), shiny_newsletters.new_send_path, 'envelope-letter' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :list, :newsletter_templates ),
        t( 'shiny_newsletters.admin.templates.index.title' ), shiny_newsletters.templates_path, 'library' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :newsletter_templates ),
        t( 'shiny_newsletters.admin.templates.new.title' ), shiny_newsletters.new_template_path, 'library-add' ) %>

  <% end %>

<% end %>
