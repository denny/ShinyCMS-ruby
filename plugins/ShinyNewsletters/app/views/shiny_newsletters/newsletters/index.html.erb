<% @page_title = t( '.title' ) %>

<section>
  <header>
    <h2>
      <%= @page_title %>
    </h2>
  </header>

  <% if @recent_sends.present? %>
  <ul>
    <% @recent_sends.each do |sent| %>
    <li>
      <%= link_to( sent.edition.name, sent.path ) %>
      - sent at sent.sent_at.to_s( :time ) on sent.sent_at.to_s( :shinydate )
    </li>
    <% end %>
  </ul>

  <%= render partial: 'includes/pager', locals: { paged: @recent_sends, route_set: shiny_newsletters } %>

  <% else %>
  <p>
    <%= t( 'empty_list', items: 'newsletters' ) %>
  </p>
  <% end %>
</section>
