<% return unless current_user.can? :list, :news_posts %>

  <%= render_admin_menu_section( t( 'shiny_news.admin.news_posts.menu' ), 'rss' ) do %>

    <%= render_admin_menu_item(
        t( 'shiny_news.admin.news_posts.index.title' ), shiny_news.news_posts_path, 'list' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :news_posts ),
        t( 'shiny_news.admin.news_posts.new.title' ), shiny_news.new_news_post_path, 'pencil' ) %>

  <% end %>
