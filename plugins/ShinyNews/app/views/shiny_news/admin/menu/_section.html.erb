<% return unless current_user.can? :list, :news_posts %>

  <%= render_admin_menu_section( t( 'shiny_news.admin.news.title' ), 'rss' ) do %>

    <%= render_admin_menu_item(
        t( 'shiny_news.admin.news.index.title' ), shiny_news.news_path, 'list' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :news_posts ),
        t( 'shiny_news.admin.news.new.title' ), shiny_news.new_post_path, 'pencil' ) %>

  <% end %>
