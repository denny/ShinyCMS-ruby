<% if plugin_name == 'ShinyNews' && current_user_can?( :list, :news_posts ) %>
  <%= t( 'shiny_news.admin.news_posts.toolbar' ) %>:
    <%= link_to t( 'list' ), shiny_news.news_posts_path %>
  <% if current_user_can? :add, :news_posts %>
    / <%= link_to t( 'add' ), shiny_news.new_news_post_path %>
  <% end %>
  <% if current_user_can?( :edit, :news_posts ) && @post.present? %>
    / <%= link_to t( 'edit' ), shiny_news.edit_news_post_path( @post ) %>
  <% end %>
    |
<% end %>
