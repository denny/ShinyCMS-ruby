<% return unless current_user.can? :list, :shiny_blog_posts %>

  <%= render_admin_menu_section( t( 'shiny_blog.admin.blog_posts.title' ), 'rss' ) do %>

    <%= render_admin_menu_item(
        t( 'shiny_blog.admin.blog_posts.index.title' ), shiny_blog.blog_posts_path, 'list' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :shiny_blog_posts ),
        t( 'shiny_blog.admin.blog_posts.new.title' ), shiny_blog.new_blog_post_path, 'pencil' ) %>

  <% end %>
