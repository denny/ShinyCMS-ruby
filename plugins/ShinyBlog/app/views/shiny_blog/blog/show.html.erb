<% @page_title = @post.title %>

<section>
  <%= render partial: 'blog/show/post_header', locals: { post: @post } %>

  <%= sanitize @post.body %>

  <%= render partial: 'blog/show/post_tags', locals: { post: @post } %>

  <%= render partial: 'blog/show/post_footer', locals: { post: @post } %>

  <%= render partial: 'blog/show/comment_form', locals: { post: @post } %>
</section>

<%= render partial: 'blog/show/discussion', locals: { post: @post } %>

<% @sidebar_position = 'right' %>
<%= render partial: 'right_sidebar_join' %>
