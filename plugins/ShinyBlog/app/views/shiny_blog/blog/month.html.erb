<% @page_title = "Blog posts in #{I18n.t("date.month_names")[@posts.first.posted_at.month]} #{@posts.first.posted_at.year}"  %>

<% @sidebar_position = 'right' %>

<h2 class="above-section">
  Blog posts in <%= I18n.t('date.month_names')[@posts.first.posted_at.month] %>
</h2>

<% @posts.each do |post| %>
<section>
  <header>
    <h2>
      <%= link_to post.title, post.path %>
    </h2>
    <h3>
      Posted by <%= user_profile_link( post.author ) %>
      at <%= display_time_on_date( post.posted_at ) %>
    </h3>
  </header>

  <%= sanitize post.teaser( paragraphs: 3 ) %>
</section>
<% end %>

<%= render partial: 'right_sidebar_join' %>
<%= render partial: 'sidebar' %>
