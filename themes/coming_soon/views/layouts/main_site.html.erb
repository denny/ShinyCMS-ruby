<html>
  <head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% @page_title ||= 'Coming Soon' %>

    <title><%= @page_title %> - <%= site_name %></title>

    <%= favicon_link_tag asset_path( 'shinycms/favicon.ico' ) %>

    <%= stylesheet_link_tag 'coming_soon' %>
    <%= stylesheet_link_tag 'shinycms/admin_toolbar' if current_user_can? :view_admin_toolbar %>
  </head>

  <body class="is-preload">

    <%= yield %>

    <% if current_user_can? :view_admin_toolbar %>
      <div style="margin-left: -3.5em;">
        <%= render partial: 'admin/includes/admin_toolbar' %>
      </div>
    <% end %>

    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag 'coming_soon' %>
  </body>
</html>
