<% @page_title = @page.name %>
<h1>
  <%= @page.name %>
</h1>
<p>
  <%= image_tag url_for( an_image ), class: 'classy' if an_image&.attached? %>
</p>
<h2>
  <%= a_heading %>
</h2>

<% if @page.default_page? %>
<p>
  You are currently viewing the default page for this site.
</p>
<% end %>

<% if plugin_loaded? :ShinyAccess %>
<% if current_user_can_access? :restricted_content %>
<p>
  You have access to view <%= access_group_name :restricted_content %>
</p>
<% end %>
<% end %>

<%= simple_format some_text %>

<%= sanitize html_text %>

<% if plugin_loaded? :ShinyInserts %>
<p class="small">
  Contact:
  <% if insert_type?( :the_email, :short_text ) %>
    <a href="mailto:<%= insert( :the_email ) %>"><%= insert( :the_email ) %></a>
  <% end %>
</p>
<% end %>
