<script>
function toggleHidden( wrapper_id ) {
  var wrapper = document.getElementById( wrapper_id );
  if ( wrapper.hidden ) {
    wrapper.hidden = false;
  } else {
    wrapper.hidden = true;
  }
}
function show( wrapper_id ) {
  document.getElementById( wrapper_id ).hidden = false;
}
function hide( wrapper_id ) {
  document.getElementById( wrapper_id ).hidden = true;
}
</script>
