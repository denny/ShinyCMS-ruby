<html>
  <%= render partial: 'themes/halcyonic/includes/head' %>

  <body<% unless @page&.default_page? %> class="subpage"<% end %>>
    <div id="page-wrapper">
      <%= render partial: 'themes/halcyonic/includes/header' %>

      <% unless controller_name == 'pages' %>
      <section id="content">
        <div class="container">
          <div class="row">
            <% if @sidebar_position == 'left' || @sidebar_position == 'both' %>
            <div class="col-3 col-12-medium">
            <% elsif @sidebar_position == 'right' %>
            <div class="col-9 col-12-medium">
            <% else %>
            <div class="col-12">
            <% end %>
      <% end %>

<%= yield %>

      <% unless controller_name == 'pages' %>
            </div>
          </div>
        </div>
      </section>
      <% end %>

      <%= render partial: 'themes/halcyonic/includes/footer' %>

      <% if current_user_can? :view_admin_toolbar %>
        <%= render partial: 'admin/includes/admin_toolbar' %>
      <% end %>
    </div>
    <%= render partial: 'themes/halcyonic/includes/footer_javascript' %>
  </body>
</html>
