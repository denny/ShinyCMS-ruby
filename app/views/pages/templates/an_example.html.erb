<% @page_title = @page.title %>
<h1>
  <%= @page.title %>
</h1>
<p>
  <img src="/images/shinycms/<%= an_image %>" alt="">
</p>
<h2>
  <%= a_heading %>
</h2>

<% if @page.default_page? %>
<p>
  You are currently viewing the default page for this site.
</p>
<% end %>

<%= simple_format some_text %>

<%= sanitize html_text %>

<p class="small">
  Contact: <%= shared_content( 'the_email' ) %>
</p>
