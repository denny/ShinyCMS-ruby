<% @page_title = 'Blog Posts' %>

<table>
  <thead>
    <tr>
      <th class="longer">
        Title
      </th>
      <th>
        Author
      </th>
      <th>
        Posted
      </th>
      <th>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.title %>
      </td>
      <td>
        <%= user_display_name( post.user ) %>
      </td>
      <td>
        <%= post.posted_at %>
      </td>
      <td class="actions">
        <%= link_to t( 'view'   ), post.view_path %>
        <%= link_to t( 'edit'   ), edit_admin_blog_post_path( post ) %>
        <%= link_to t( 'delete' ), admin_blog_post_path( post ),
            method: :delete, data: { confirm: t( 'are_you_sure' ) } %>
  		</td>
    </tr>
    <% end %>
  </tbody>
</table>
