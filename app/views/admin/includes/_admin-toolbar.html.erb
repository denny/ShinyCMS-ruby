<%= link_to image_tag( 'admin/admin-toolbar-logo' ), 'http://shinycms.org/' %>

<div id="admin-toolbar-links">
  <%= link_to 'Home', url_for( '/' ) %>
  |
  <% if controller_name == 'pages' %>
  Page:
  <%= link_to 'Add',  admin_page_add_path %> /
  <% if @page %>
  <%= link_to 'Edit', admin_page_path( @page ) %> /
  <% end %>
  <%= link_to 'List', admin_pages_path %>
  |
  Section:
  <%= link_to 'Add',  admin_pages_section_add_path %> /
  <% if @page&.section %>
  <%= link_to 'Edit', admin_pages_section_path( @page.section ) %> /
  <% end %>
  <%= link_to 'List', admin_pages_sections_path %>
  |
  Template:
  <%= link_to 'Add',  admin_pages_template_add_path %> /
  <% if @page %>
  <%= link_to 'Edit', admin_pages_template_path( @page.template ) %> /
  <% end %>
  <%= link_to 'List', admin_pages_templates_path %>
  <% end  # pages %>
  |
  <%= link_to 'Admin area', url_for( admin_path ) %>
</div>
