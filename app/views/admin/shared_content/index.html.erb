<% @page_title = t( 'admin.shared_content.shared_content' ) %>

<%= form_with name: 'all_shared_content', url: admin_shared_content_path, method: :post do %>
<table class="list">
  <% @elements.each do |e| %>
  <tr class="showfocus">
    <td>
      <%= render partial: 'admin/shared_content/shared_content_element',
                 locals: { e: e, filenames: select_filenames } %>
    </td>
    <td class="actions">
      <%= link_to t( 'admin.delete' ), admin_shared_content_delete_path( e ),
          method: :delete, data: { confirm: t( 'are_you_sure' ) } %>
		</td>
  </tr>
  <% end %>
</table>
<p>
  <%= submit_tag t( 'admin.update' ) %>
</p>
<% end  # form %>

<%= form_for :shared_content_element, name: 'new_element', url: admin_shared_content_create_path, method: :post do |f2| %>
  <fieldset>
    <legend>
      Add new shared content
    </legend>
    <p>
      <%= f2.text_field :name, placeholder: t( 'admin.shared_content.name_placeholder' ), class: 'textshort' %>
      <%= f2.select :content_type, content_types %>
      <br><%= f2.text_field :content, placeholder: t( 'admin.shared_content.content_placeholder' ), class: 'textlong' %>
    </p>
    <p>
      <%= f2.submit t( 'admin.add' ) %>
    </p>
  </fieldset>
<% end %>
