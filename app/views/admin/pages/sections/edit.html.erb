<% @page_title = 'Edit section' %>

<%= form_for @section, url: admin_pages_section_path( @section ), method: 'post' do |f| %>
  <p>
    <%= f.label :name %>
    <br><%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <br><%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :title %>
    <br><%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :slug %>
    <br><%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :section %>
    <br><%= select( 'page_section', 'section_id', PageSection.pluck( :name, :id ),
            { include_blank: 'None', selected: @section.section_id } ) %>
  </p>
  <p>
    <%= f.label :sort_order %>
    <br><%= f.text_field :sort_order %>
  </p>
  <p>
    <%= f.label :hidden %>
    <br><%= f.check_box :hidden %>
  </p>
  <p>
    <%= f.submit 'Update Section' %>
  </p>
<% end %>
