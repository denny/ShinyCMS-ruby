<% @page_title = 'Add new section' %>

<%= form_for :page_section, url: '/admin/pages/section/add', method: 'post' do |f| %>
  <p>
    Name:
    <br><%= f.text_field :name %>
  </p>
  <p>
    Description:
    <br><%= f.text_field :description %>
  </p>
  <p>
    Title:
    <br><%= f.text_field :title %>
  </p>
  <p>
    Slug:
    <br><%= f.text_field :slug %>
  </p>
  <p>
    Section:
    <br><%= select( 'page_section', 'section_id',
      PageSection.pluck( :name, :id ), { include_blank: 'None' } ) %>
  </p>
  <p>
    Sort order:
    <br><%= f.text_field :sort_order %>
  </p>
  <p>
    Hidden:
    <br><%= f.check_box :hidden %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
