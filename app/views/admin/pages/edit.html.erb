<% @page_title = 'Edit page' %>

<%= form_for( @page, url: admin_page_path( @page ), method: 'post' ) do |f| %>
  <p>
    Name:
    <br><%= f.text_field :name %>
  </p>
  <p>
    Description:
    <br><%= f.text_field :description %>
  </p>
  <p>
    Title:
    <br><%= f.text_field :title %>
  </p>
  <p>
    Slug:
    <br><%= f.text_field :slug %>
  </p>
  <p>
    Template:
    <br><%= select( 'page', 'template_id', PageTemplate.pluck( :name, :id ),
            { selected: @page.template_id} ) %>
  </p>
  <p>
    Section:
    <br><%= select( 'page', 'section_id', PageSection.pluck( :name, :id ),
            { include_blank: 'None', selected: @page.section_id } ) %>
  </p>
  <p>
    Sort order:
    <br><%= f.text_field :sort_order %>
  </p>
  <p>
    Hidden:
    <br><%= f.check_box :hidden %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
