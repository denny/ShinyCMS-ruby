<%
  set_as_active ||= false
  item_id = text.parameterize
  active = ''
  if set_as_active || request.path.starts_with?( link )
    active = 'c-active'
  end
%>
<a name="<%= item_id %>"></a>
<li class="c-sidebar-nav-item">
  <a class="c-sidebar-nav-link <%= active %>" href="<%= link %>">
    <i class="cil-<%= icon %>"></i> <%= text %>
    <% badge ||= false %>
    <% if badge %>
    <% badge_style ||= 'info' %>
    <span class="badge badge-<%= badge_style %>"><%= badge %></span>
    <% end %>
  </a>
</li>
