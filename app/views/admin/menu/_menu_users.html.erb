<% return unless current_user.admin_can? :list, :users %>

  <%= render_admin_menu_section( t( 'admin.users.title' ), 'people' ) do %>

    <%= render_admin_menu_item(
        t( 'admin.users.index.title' ), users_path, 'people' ) %>

    <%= render_admin_menu_item_if( current_user.admin_can?( :add, :users ),
        t( 'admin.users.new.title' ), new_user_path, 'user-follow' ) %>

  <% end %>
