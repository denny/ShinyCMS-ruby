<% return unless user_signed_in? %>

<% num ||= '' %>
<% if flash[ :show_checkbox_recaptcha ] %>
  <%= recaptcha_tags site_key: recaptcha_checkbox_site_key, id: "g-recaptcha-response#{num}" %>
<% elsif recaptcha_v3_site_key.present? %>
  <% action ||= '' %>
  <%= recaptcha_v3 action: action, site_key: recaptcha_v3_site_key, id: "g-recaptcha-response#{num}" %>
<% else %>
  <%= recaptcha_tags site_key: recaptcha_v2_site_key, id: "g-recaptcha-response#{num}" %>
<% end %>
