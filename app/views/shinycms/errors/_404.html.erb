<section>
  <header>
    <h2>
      Tags
    </h2>
  </header>

  <p>
    <% @tags = ActsAsTaggableOn::Tag.order( :name ) %>
    <% tag_cloud( @tags, %w[ tagsize1 tagsize2 tagsize3 tagsize4 ] ) do |tag, css_class| %>
      <%= link_to tag.name, tag_path( tag.name ), :class => css_class %>&nbsp;
    <% end %>
  </p>
</section>
