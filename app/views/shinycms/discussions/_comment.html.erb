<a name="<%= comment.number %>"></a>
<section class="comment" style="margin-left: <%= depth %>em;">
  <header>
    <%= render partial: 'discussions/comment/header', locals: { comment: comment } %>
  </header>

  <p>
    <%= sanitize comment.body %>
  </p>

  <footer>
    <%= render partial: 'discussions/comment/footer', locals: { comment: comment } %>
  </footer>

  <% unless comment.locked? %>
  <div id="reply_form_<%= comment.id %>" style="margin: 0; padding: 0;" hidden>
    <%= render partial: 'discussions/comment/form', locals: { comment: comment } %>
  </div>
  <% end %>
</section>
