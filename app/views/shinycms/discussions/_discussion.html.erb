<% if resource.discussion.show_on_site? %>

<h3 class="above-section">
  <%= t( 'discussions.comments' ) %>
</h3>

<% if resource.discussion.comments.top_level.present? %>
  <%= render partial: 'discussions/top_level',
             locals: { comments: resource.discussion.comments.top_level } %>
<% else %>
  <section>
    <p>
      <%= t( 'empty_list', items: 'comments' ) %>
    </p>
  </section>
<% end %>

<% end %>
