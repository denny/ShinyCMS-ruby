Posted by
<% if comment.author_type == 'anonymous' %>
  <%= t( '.anonymous' ) %>
<% elsif comment.author_type == 'pseudonymous' %>
  <% if comment.author_url.present? %>
    <%= link_to comment.author_name, comment.author_url %>
  <% else %>
    <%= comment.author_name %>
  <% end %>
<% elsif comment.author_type == 'authenticated' %>
    <%= user_profile_link( comment.author ) %>
<% end %>
at <%= comment.posted_at.to_s( :time      ) %>
on <%= comment.posted_at.to_s( :shinydate ) %>
